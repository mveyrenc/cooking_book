<% if breadcrumb_trail.any? %>
  <nav <%= raw(tag_builder.tag_options(html_options)) %> class="<%= css_class %>">
    <ul>
      <% breadcrumb_trail.each do |crumb| %>
        <li class="<%= 'is-active' if crumb.current? %>">
          <%= link_to crumb.name, crumb.url, (crumb.current? ? {'aria-current' => 'page'} : {}) %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>