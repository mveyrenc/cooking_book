<section class="section">
  <div class="container box">
    <div class="level">
      <div class="level-left">
        <div class="title is-size-1"><%= I18n.t('categories.index_page_title') %></div>
      </div>
      <div class="level-right">
        <%= render(Application::Elements::ButtonNewComponent.new(url: new_category_path)) %>
      </div>
    </div>
    <section class="section">
      <div class="container">
        <%= render(Categories::SearchFormComponent.new(
            search_params: search_params,
            search_result: search_result
        )) %>
      </div>
    </section>
    <div class="container is-widescreen">
      <%= render(Categories::ListComponent.new(
          objects: search_result
      )) %>
    </div>
    <%= paginate search_result %>
  </div>
</section>
