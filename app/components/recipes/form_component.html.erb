<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(item.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="buttons is-centered">
    <%= render(Application::Form::SubmitEntryComponent.new(
        form: f,
        resource: item
    )) %>
  </div>
  <hr/>
  <%= render(Application::Form::TextEntryComponent.new(
      form: f,
      method: :name,
      resource: item,
      options: {required: true}
  )) %>
  <%= render(Application::Form::CollectionCheckboxesEntryComponent.new(
      form: f,
      method: :category_ids,
      resource: item,
      choices: Category.recipe_type.ordered,
      value_method: :id,
      text_method: :to_s
  )) %>
  <%= render(Application::Form::CollectionSelectEntryComponent.new(
      form: f,
      method: :category_ids,
      resource: item,
      choices: Category.categories.ordered,
      value_method: :id,
      text_method: :to_s,
      field_html_options: {multiple: true}
  )) %>
  <%= render(Application::Form::MarkdownEntryComponent.new(
      form: f,
      method: :description,
      resource: item
  )) %>
  <%= render(Application::Form::ImageEntryComponent.new(
      form: f,
      method: :picture,
      resource: item
  )) %>
  <%= render(Application::Form::TextareaEntryComponent.new(
      form: f,
      method: :times,
      resource: item
  )) %>
  <!--  <div class="form-group">-->
  <%#= f.label :difficulty, :class => "col-sm-2 control-label" %>
  <!--    <div class="col-sm-10">-->
  <%#= f.select :difficulty, Recipe.difficulty_types.collect {|k,v| [ t(k.to_s, scope: 'recipes'), v ] }.to_h, {}, {:class => "form-control"} %>
  <!--    </div>-->
  <!--  </div>-->
  <!--  <div class="form-group">-->
  <%#= f.label :cost, :class => "col-sm-2 control-label" %>
  <!--    <div class="col-sm-10">-->
  <%#= f.select :cost, Recipe.cost_types.collect {|k,v| [ t(k.to_s, scope: 'recipes'),v ] }.to_h, {}, {:class => "form-control"} %>
  <!--    </div>-->
  <!--  </div>-->
  <%= render(Application::Form::TextEntryComponent.new(
      form: f,
      method: :quantity,
      resource: item
  )) %>
  <%= render(Application::Form::MarkdownEntryComponent.new(
      form: f,
      method: :ingredients,
      resource: item
  )) %>
  <%= render(Application::Form::CollectionSelectEntryComponent.new(
      form: f,
      method: :main_ingredient_ids,
      resource: item,
      choices: Ingredient.ordered,
      value_method: :to_s,
      text_method: :to_s,
      field_html_options: {multiple: true}
  )) %>
  <%= render(Application::Form::MarkdownEntryComponent.new(
      form: f,
      method: :directions,
      resource: item
  )) %>
  <%= render(Application::Form::CollectionSelectEntryComponent.new(
      form: f,
      method: :source_ids,
      resource: item,
      choices: Source.ordered,
      value_method: :id,
      text_method: :to_s,
      field_html_options: {multiple: true}
  )) %>
  <%= render(Application::Form::TextEntryComponent.new(
      form: f,
      method: :wine,
      resource: item
  )) %>
  <hr/>
  <div class="buttons is-centered">
    <%= render(Application::Form::SubmitEntryComponent.new(
        form: f,
        resource: item
    )) %>
  </div>
<% end %>
