<div class="menu">
  <ul class="menu-list">
    <% if object.id.present? %>
      <li>
        <%= link_to [object.book, object] do %>
          <span class="icon"><%= render Application::Elements::FontAwesomeIconComponent.new(icon: 'arrow-left') %></span>
          <span><%= t('application.back') %></span>
        <% end %>
      </li>
    <% end %>
    <li>
      <%= link_to book_recipes_path(object.book) do %>
        <span class="icon"><%= render Application::Elements::FontAwesomeIconComponent.new(icon: 'book') %></span>
        <span><%= t('recipes.view_all') %></span>
      <% end %>
    </li>
    <li>
      <%= link_to new_book_recipe_path(object.book) do %>
        <span class="icon"><%= render Application::Elements::FontAwesomeIconComponent.new(icon: 'plus') %></span>
        <span><%= t('recipes.new_button') %></span>
      <% end %>
    </li>
    <li>
      <%= link_to book_import_recipe_index_path(object.book) do %>
        <span class="icon"><%= render Application::Elements::FontAwesomeIconComponent.new(icon: 'download') %></span>
        <span><%= t('recipes.import_url') %></span>
      <% end %>
    </li>
  </ul>
</div>