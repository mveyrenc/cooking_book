<div class="container-fluid">
  <div class="columns is-desktop">
    <div class="column is-8-desktop">
      <div class="box">
        <div class="level">
          <div class="level-left">
            <div class="title is-size-1"><%= I18n.t('recipes.index_page_title', count: result.total_count) %></div>
          </div>
          <div class="level-right">
            <%= link_to(new_recipe_path, class: new_button_css_classes, title: new_button_title) do %>
              <%= render(Application::Elements::ButtonNewComponent.new) %>
            <% end %>
          </div>
        </div>
        <%= render(Recipes::List::ViewComponent.new(
          objects: result
        )) %>
        <div>
          <%= paginate result %>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="box">
        <%= render(Recipes::Search::FormComponent.new(
          query: query,
          result: result
        )) %>
      </div>
    </div>
  </div>
</div>