<section class="mt-5">
  <div class="columns is-multiline is-centered">
    <% if sources.render? %>
      <div class="column is-narrow">
        <div class="content has-text-centered">
          <%= render(sources) %>
        </div>
      </div>
    <% end %>
    <% if categories.render? %>
      <div class="column is-narrow">
        <%= render(categories) %>
      </div>
    <% end %>
    <% if ingredients.render? %>
      <div class="column is-narrow">
        <%= render(ingredients) %>
      </div>
    <% end %>
  </div>
</section>