<div class="import-recipe-page edit-page form-page">
    <div class="page-header row">
        <div class="buttons">
            <%= back_button recipes_path %>
        </div>
        <header class="with-shadow">
            <h1><%= I18n.t( 'recipes.import_regal_page_title' ) %></h1>
        </header>
    </div>
    <%= form_for(@import_recipe, :html => { :class => "with-shadow form-horizontal" }) do |f| %>
      <% if @import_recipe.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@import_recipe.errors.count, I18n.t( 'application.error' )) %> <%= I18n.t( 'application.error_message' ) %></h4>
            <ul>
                <% @import_recipe.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
      <% end %>
      <div class="form-group">
          <%= f.label :url, :class => "col-sm-2 control-label required" %>
          <div class="col-sm-10">
              <%= f.url_field :url, :class => "form-control required" %>
          </div>
      </div>
      <hr />
      <div class="form-group text-center">
          <%= f.submit :class => "btn btn-primary" %>
      </div>
    <% end %>
</div>

