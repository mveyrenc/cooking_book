<div class="source-page index-page">
    <div class="page-header">
        <%= link_to new_source_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%=  I18n.t( 'sources.new_button' ) %>
        <% end %>
        <h1><%= I18n.t( 'sources.index_page_title' ) %></h1>
    </div>
    <% if @sources.blank? %>
      No entry
    <% else %>
      <div class="container">
          <% @sources.each do |source| %>
            <%= render 'row', source: source %>
          <% end %>
      </div>
    <% end %>
</div>
