<%= form_for(@source, :html => { :class => "with-shadow form-horizontal" }) do |f| %>
  <% if @source.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:</h4>

        <ul>
            <% @source.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
          <%= f.text_field :name, :class => "form-control" %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :parent, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
          <%=  collection_select :source, :parent_id, Source.ordered, :id, :name, { :prompt => true }, { :class => "form-control" }  %>
      </div>
  </div>
  <hr />
  <div class="form-group text-center">
      <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
