<div class="ingredient-page index-page">
    <div class="page-header">
        <%= link_to new_ingredient_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%=  I18n.t( 'ingredients.new_button' ) %>
        <% end %>
        <h1><%= I18n.t( 'ingredients.index_page_title' ) %></h1>
    </div>
    <% if @ingredients.blank? %>
      No entry
    <% else %>
      <div class="container">
          <% @ingredients.each do |ingredient| %>
            <%= render 'row', ingredient: ingredient %>
          <% end %>
      </div>
    <% end %>
</div>
