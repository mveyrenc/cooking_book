<div class="ingredient-page index-page">
    <div class="page-header row">
        <header class="with-shadow">
            <h1><%= I18n.t( 'ingredients.index_page_title' ) %></h1>
        </header>
    </div>
    <% if can? :create, Ingredient %>
      <div class="buttons">
          <%= new_button new_ingredient_path, I18n.t( 'ingredients.new_button' ) %>
      </div>
    <% end %>
    <div class="with-shadow">
        <% if @ingredients.blank? %>
          No entry
        <% else %>
          <% @ingredients.each do |ingredient| %>
            <%= render 'row', ingredient: ingredient %>
          <% end %>
        <% end %>
    </div>
</div>
