<div class="ingredient-page edit-page form-page">
  <div class="page-header">
    <%= link_to ingredients_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%= I18n.t( 'application.back' ) %>
    <% end %>
    <%= link_to @ingredient, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
