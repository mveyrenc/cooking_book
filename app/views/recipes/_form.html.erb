<%= form_for(@recipe, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@recipe.errors.count, I18n.t( 'application.error' )) %> <%= I18n.t( 'application.error_message' ) %></h4>
      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dish_type, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%=  collection_select :recipe, :dish_type_id, DishType.all, :id, :name, { :prompt => true }, { :class => "form-control" }  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_ids, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <div class="col-sm-4">
        <% category_list = Category.all.order( :name )
        category_col_count = ( category_list.count / 3 ).next
        i = 1 %>
        <%=  collection_check_boxes :recipe, :category_ids, category_list, :id, :name do |b| %>
          <div class="checkbox">
            <%= b.label do %>
              <%= b.check_box(:class => "checkbox") %><%= b.object.name %>
            <% end  %>
          </div>
          <% if i.modulo( category_col_count ) == 0 %>
          </div><div class="col-sm-4">
          <% end %>
          <% i = i.next %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control tinymce" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :picture, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :times, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :times, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%= f.text_area :ingredients, :class => "form-control tinymce" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :directions, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%= f.text_area :directions, :class => "form-control tinymce" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :source, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :wine, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :wine, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
  <%= tinymce %>
<% end %>
