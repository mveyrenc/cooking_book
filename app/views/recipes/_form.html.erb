<%= form_for(@recipe, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>

      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%= f.text_area :ingredients, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :directions, :class => "col-sm-2 control-label required" %>
    <div class="col-sm-10">
      <%= f.text_area :directions, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :source, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>