<div class="category-page show-page">
    <div class="page-header">
        <%= link_to categories_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          <%= I18n.t( 'application.back' ) %>
        <% end %>
        <% if can? :update, @category %>
          <%= link_to edit_category_path(@category), :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-pencil"></span>
            <%= I18n.t( 'application.edit' ) %>
          <% end %>
        <% end %>
        <h1><%= @category %></h1>
    </div>

    <dl class="dl-horizontal">
        <dt class="name"><%= Category.human_attribute_name( 'name' ) %></dt>
        <dd class="name">
            <h2><%= @category.name %></h2>
            <p><%= @category.related_categories.join(', ') %></p>
            <p><%= @category.suggested_categories.join(', ') %></p>
        </dd>
    </dl>
</div>
