<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop">
          <h2 class="is-size-2">Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "box"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field has-text-centered">
              <%= f.submit "Send me reset password instructions", class: "is-success" %>
            </div>
            <div class="notification is-link">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
