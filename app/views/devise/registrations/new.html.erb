<div class="user-page sign-up-page form-page">
    <div class="page-header">
        <h1><%= t('devise.label.sign_up') %></h1>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "with-shadow form-horizontal" }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
            <%= f.label :name, :class => "col-sm-3 control-label required" %>
            <div class="col-sm-9">
                <%= f.text_field :name, autofocus: true, :class => "form-control" %>
            </div>
        </div>
    
        <div class="form-group">
            <%= f.label :email, :class => "col-sm-3 control-label required" %>
            <div class="col-sm-9">
                <%= f.email_field :email, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password, :class => "col-sm-3 control-label required" %>
            <div class="col-sm-9">
                <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, :class => "col-sm-3 control-label required" %>
            <div class="col-sm-9">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <hr />
        <div class="form-group text-center">
            <div class="col-sm-offset-2 col-sm-9">
                <%= f.submit t('devise.label.log_in'), :class => "btn btn-primary" %>
            </div>
        </div>
      <% end %>
  </div>

