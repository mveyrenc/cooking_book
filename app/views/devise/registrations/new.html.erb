<h2 class="is-size-2"><%= t('devise.label.sign_up') %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "box" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    placeholder: 'e.g. bobsmith@gmail.com',
                    required: true,
                    class: 'input' %>
  <%= f.password_field :password,
                       autocomplete: "new-password",
                       placeholder: '*******',
                       class: 'input',
                       help: t('devise.label.password_minimum_length', { length: @minimum_password_length }) %>
  <%= f.password_field :password_confirmation,
                       autocomplete: "new-password",
                       placeholder: '*******',
                       class: 'input' %>
  <div class="control has-text-centered">
    <%= f.submit t('devise.label.sign_up'), class: "button is-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
