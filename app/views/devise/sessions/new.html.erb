<div class="user-page sign-in-page form-page">
    <div class="page-header">
        <h1><%= t('devise.label.sign_in') %></h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "with-shadow form-horizontal" }) do |f| %>
        <div class="form-group">
            <%= f.label :email, :class => "col-sm-2 control-label required" %>
            <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password, :class => "col-sm-2 control-label required" %>
            <div class="col-sm-10">
                <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
              <div class="col-sm-2 text-right">
                  <%= f.check_box :remember_me %>
              </div>
              <%= f.label :remember_me, :class => "col-sm-10" %>
          </div>
        <% end -%>
        <hr />
        <div class="form-group text-center">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit t('devise.label.log_in'), :class => "btn btn-primary" %>
            </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
